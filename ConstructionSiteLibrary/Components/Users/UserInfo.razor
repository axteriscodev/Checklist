@using Shared.Organizations

<div class="card p-4">
    <div class="row my-2">
        <div class="col">
            <RadzenFormField Text="Nome" Variant="@GlobalVariables.ComponentVariant" class="text-field">
                <ChildContent>
                    <RadzenTextBox Name="Nome" @bind-Value=@User.Name />
                </ChildContent>
            </RadzenFormField>
        </div>
        <div class="col">
            <RadzenFormField Text="Cognome" Variant="@GlobalVariables.ComponentVariant" class="text-field">
                <ChildContent>
                    <RadzenTextBox Name="Cognome" @bind-Value=@User.Surname />
                </ChildContent>
            </RadzenFormField>
        </div>
    </div>
    <div class="row my-2">
        <RadzenFormField Text="Email" Variant="@GlobalVariables.ComponentVariant" class="text-field">
            <ChildContent>
                <RadzenTextBox Name="Email" @bind-Value=@User.Email />
            </ChildContent>
        </RadzenFormField>
    </div>
    <div class="row my-2">
        <RadzenFormField Text="Telefono" Variant="@GlobalVariables.ComponentVariant" class="text-field">
            <ChildContent>
                <RadzenTextBox Name="Telefono" @bind-Value=@User.Phone />
            </ChildContent>
        </RadzenFormField>
    </div>
</div>


@code {

    [Parameter]
    required public UserModel User { get; set; }

}